<!-- Contact form -->
<div>
	<h3 id="top-text"><center>Contactez-nous</h3>
		<p><center>La proximité est une priorité pour nous.<br>
		Nous sommes proches de nos clients et de nos partenaires et serions ravis d’échanger avec vous.</center></p>
		<p><center id="contact-mail">contact@mercadev.fr</p>
		</div>

		<% if @contact != nil && @contact.errors.any? %>
		<div id="error_explanation" >
			<h2>Votre message n'a pas pu être envoyé. Car il y a <%= pluralize(@contact.errors.count, "erreur") %> :</h2>

			<ul>
				<% @contact.errors.each do |attr, msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<!-- Contact Form -->
		<%= form_for @contact, url: {action: "create"} do |f| %>
			<div class="form-row">
				<div class="col">
					<%= f.text_field :first_name, class: "form-control", placeholder: "Prénom" %>
				</div>
				<div class="col">
					<%= f.text_field :last_name, class: "form-control", placeholder: "Nom" %>
				</div>
				<div class="col">
					<%= f.text_field :company, class: "form-control", placeholder: "Société" %>
				</div>
			</div>

			<!-- E-mail -->
			<div class="form-row">
				<div class="col">
					<%= f.text_field :email, class: "form-control", placeholder: "Adresse e-mail" %>
				</div>
			</div>

			<!-- Subject -->
			<div class="form-row">
				<div class="col">
					<%= f.text_field :subject, class: "form-control", placeholder: "Sujet" %>
				</div>
			</div>

			<!-- Message -->
			<div class="form-row">
				<div class="col">
					<%= f.text_area :message, class: "form-control", placeholder: "Message", size:"150x5" %>
				</div>
			</div>

			<!-- Submit button -->
			<div class="btn-form-row">
				<%= f.submit "Envoyer", class: "btn btn-primary btn-lg btn-block", id: "send_btn" %>
			</div>
		<% end %>

