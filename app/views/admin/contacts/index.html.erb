
<div id='scraping_progress' class="progress" style="height: 30px;">
	<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">test de la progressbar</div>
</div>

<%= form_tag(send_prospect_emails_path) do %>

<table id='contact_table' class="table table-striped table-hover table-bordered">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Prénom</th>
			<th scope="col">Nom</th>
			<th scope="col">Entreprise</th>
			<th scope="col">Activité</th>
			<th scope="col">Profession</th>
			<th scope="col">E-mail</th>
			<th scope="col">Mobile</th>
			<th scope="col">Fixe</th>
			<th scope="col">Adresse</th>
			<th scope="col">Site web</th>
			<th scope="col">Source</th>
			<th scope="col">Sélect. tout <%= check_box_tag 'check_all' %></th>
		</tr>
	</thead>
	<tbody>
		<% @contacts.each do |c| %>
		<tr>
			<th scope="row"><%= c.id %></th>
			<td><%= c.first_name %></td>
			<td><%= c.last_name %></td>
			<td><%= c.company %></td>
			<td><%= c.activity %></td>
			<td><%= c.profession %></td>
			<td><%= c.email %></td>
			<td><%= c.mobile_phone %></td>
			<td><%= c.fixed_phone %></td>
			<td><%= c.address %></td>
			<td><%= c.website %></td>
			<td><%= c.source %></td>
			<td><%= check_box_tag 'contact_ids[]', c.id, false, class: 'contact-checkbox' %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="btn-form-row">
	<%= submit_tag "Envoyer e-mails", class: "btn btn-primary btn-lg btn-block", id: "send_btn" %>
</div>

<% end %>